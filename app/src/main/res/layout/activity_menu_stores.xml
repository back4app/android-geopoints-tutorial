<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.thay.geopointsexample.MenuStoresActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <Button
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="Back"
            android:textColor="@android:color/black"
            android:textSize="12sp"

            />

        <Button
            android:id="@+id/button_all_stores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="#4B8A08"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="Find all stores"
            android:layout_gravity="center_vertical|center_horizontal"
            android:textColor="@android:color/white"

            />

        <Button
            android:id="@+id/button_closest_store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="#4B8A08"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="Find closest store"
            android:layout_gravity="center_vertical|center_horizontal"
            android:textColor="@android:color/white"

            />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>